def get_numbers():
    """Return a hardcoded list of numbers. Replace with input logic if needed."""
    return [10, 20, 30, 40, 50]

def compute_mean(numbers):
    """Compute the mean of a list of numbers."""
    return sum(numbers) / len(numbers) if numbers else 0

def compute_median(numbers):
    """Compute the median of a list of numbers."""
    sorted_numbers = sorted(numbers)
    n = len(sorted_numbers)
    if n == 0:
        return None
    midpoint = n // 2
    if n % 2 == 1:
        return sorted_numbers[midpoint]
    else:
        return (sorted_numbers[midpoint - 1] + sorted_numbers[midpoint]) / 2

def show_statistics(numbers):
    """Display mean and median for a list of numbers."""
    print(f"Numbers: {numbers}")
    print(f"Mean: {compute_mean(numbers)}")
    print(f"Median: {compute_median(numbers)}")

def main():
    numbers = get_numbers()
    show_statistics(numbers)


